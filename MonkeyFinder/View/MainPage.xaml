<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:MonkeyFinder.Model"
             xmlns:viewmodel="clr-namespace:MonkeyFinder.ViewModel"
             x:DataType="viewmodel:MonkeysViewModel"
             x:Class="MonkeyFinder.View.MainPage"
             Title="{Binding Path=Title}">

    <Grid ColumnDefinitions="*,*"
          ColumnSpacing="5"
          RowDefinitions="*,Auto"
          RowSpacing="0">

        <CollectionView BackgroundColor="Transparent"
                        Grid.ColumnSpan="2"
                        ItemsSource="{Binding Path=Monkeys}"
                        SelectionMode="None">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Monkey">

                    <Grid Padding="10">
                        <!-- Intelisense is suggesting to use boarder instead of frame because frame is obsolete, using frame here because boarder does not look like frame -->
                        <Frame HeightRequest="125"
                               Padding="0"
                               Style="{StaticResource CardView}">

                            <Grid Padding="0"
                                  ColumnDefinitions="125,*">
                                <Image Aspect="AspectFill"
                                       Source="{Binding Path=Image}"
                                       WidthRequest="125"
                                       HeightRequest="125" />

                                <!-- <Label Text="{Binding Path=Name}" /> -->
                                <VerticalStackLayout Grid.Column="1"
                                                     Padding="10"
                                                     VerticalOptions="Center">

                                    <Label Text="{Binding Path=Name}"
                                           Style="{StaticResource LargeLabel}" />
                                    <Label Text="{Binding Path=Location}"
                                           Style="{StaticResource LargeLabel}" />

                                </VerticalStackLayout>
                            </Grid>

                        </Frame>
                    </Grid>

                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

        <Button Text="Get Monkeys"
                Grid.Row="1"
                Margin="8"
                Style="{StaticResource ButtonOutline}"
                Command="{Binding Path=GetMonkeysCommand}"
                IsEnabled="{Binding Path=IsNotBusy}" />

        <ActivityIndicator IsVisible="{Binding  Path=IsBusy}"
                           IsRunning="{Binding Path=IsBusy}"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="CenterAndExpand"
                           Grid.ColumnSpan="2"
                           Grid.RowSpan="2" />

    </Grid>

</ContentPage>